---
import Layout from "@/layouts/Layout.astro";
import ServerComponent from "@/components/samples/ServerComponent.astro";
---

<script is:inline type="module">
  // Send request to the server on each page load
  const data = await fetch("/samples/api/users/1234", {
    method: "POST",
    body: JSON.stringify(true),
  }).then((res) => res.json());
  console.log(data);
</script>

<Layout>
  <ServerComponent server:defer>
    <ServerComponent name="fallback" slot="fallback" />
  </ServerComponent>
</Layout>
